<!-- Validation failure messages -->
<% if @allergen.errors.any? %>
  <% @allergen.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Allergen #<%= @allergen.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_allergen/<%= @allergen.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @allergen.name %>">
      </div>

      <!-- Label and input for reaction -->
      <div class="form-group">
        <label for="reaction" class="control-label">
          Reaction
        </label>

        <input type="text" id="reaction" name="reaction" placeholder="Reaction" class="form-control" value="<%= @allergen.reaction %>">
      </div>

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <input type="text" id="restaurants_id" name="restaurants_id" placeholder="Restaurants" class="form-control" value="<%= @allergen.restaurants_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @allergen.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Allergen
      </button>
      or
      <a href="/allergens/<%= @allergen.id %>">Cancel</a>
    </form>
  </div>
</div>
