<!-- Validation failure messages -->
<% if @entree.errors.any? %>
  <% @entree.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Entree #<%= @entree.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_entree/<%= @entree.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @entree.name %>">
      </div>

      <!-- Label and input for allergens_id -->
      <div class="form-group">
        <label for="allergens_id" class="control-label">
          Allergens
        </label>

        <%= select_tag(:allergens_id, options_from_collection_for_select(Allergen.all, :id, :name, @entree.allergens_id), :class => "form-control") %>
      </div>

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <%= select_tag(:restaurants_id, options_from_collection_for_select(Restaurant.all, :id, :name, @entree.restaurants_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Entree
      </button>
      or
      <a href="/entrees/<%= @entree.id %>">Cancel</a>
    </form>
  </div>
</div>
